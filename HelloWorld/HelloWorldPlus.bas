50 PRINT CHR$(5);", ";
60 PRINT CHR$(155);"W";CHR$(129);"O";CHR$(150);"R";CHR$(153);"L";CHR$(154);"D";
70 PRINT CHR$(5);"!"
80 PRINT CHR$(28);"H";CHR$(30);"E";CHR$(159);"L";CHR$(156);"L";CHR$(158);"O";
90 PRINT CHR$(5);", ";
100 PRINT CHR$(155);"B";CHR$(129);"A";CHR$(150);"S";CHR$(153);"I";
